<div id="<%= dom_id(discussion) %>">
  <h2><%= link_to discussion.name, discussion%></h2>
  Pinned: <%= discussion.pinned%>   |   Clossed: <%= discussion.closed%>
  <div>
    <%= link_to "Edit", edit_discussion_path(discussion), class: "" %> |
  </div>
  <div>
    <%= button_to "Delete", discussion, method: :delete, form: { data: { turbo_confirm: "Are you sure? This cannot be undone" } }, class: ""%>
  </div>
</div>
